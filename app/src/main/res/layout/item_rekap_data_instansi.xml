<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvNamaInstansi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Instansi"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvJenisRoda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Roda"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvJumlahKendaraan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Kendaraan"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvJumlahAsnPenanggungJawab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah ASN Penanggung Jawab"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>